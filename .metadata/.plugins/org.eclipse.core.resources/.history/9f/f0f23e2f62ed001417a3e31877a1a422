	<!-- 注册dataSource数据库配置文件 -->
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="com.mysql.jdbc.Driver">
		</property>
		<property name="url"
			value="jdbc:mysql://localhost:3306/hibernatesing">
		</property>
		<property name="username" value="root"></property>
		<property name="password" value="1"></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/zhou/account/bean/Account.hbm.xml</value>
				<value>com/zhou/song/bean/SongType.java</value>
			</list>
		</property></bean>
	<bean id="userAccountDao" class="com.zhou.dao.UserAccountDaoImpl"
		abstract="false" lazy-init="default" autowire="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="songTypeDao" class="com.zhou.dao.SongTypeDaoImpl"
		abstract="false" lazy-init="default" autowire="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<!-- <bean id="persion" class="test.Persion">
